@model LojaSystem.Models.Equipamento

@{
    ViewData["Title"] = "Edit";
}

<div class="card">
    <div class="card-body">
        <h2>Editar Equipamento</h2>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdEquipamento" />
                    <div class="form-group">
                        <label asp-for="NumeroSerie" class="control-label"></label>
                        <input asp-for="NumeroSerie" class="form-control" />
                        <span asp-validation-for="NumeroSerie" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Acessorios" class="control-label"></label>
                        <input asp-for="Acessorios" class="form-control" />
                        <span asp-validation-for="Acessorios" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MarcaFK" class="control-label">Marca</label>
                        <select asp-for="MarcaFK" class="select form-select form-control" asp-items="ViewBag.MarcaFK"></select>
                        <span asp-validation-for="MarcaFK" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>
<div>
    <a asp-action="Index">Retornar para a lista</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<script>

    $(document).ready(function () {
        $('.select').select2({
            placeholder: "Selecione uma opção",
            theme: "bootstrap4",
            allowClear: true,
            width: '100%'
        })
    });

</script>
