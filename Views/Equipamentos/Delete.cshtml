@model LojaSystem.Models.Equipamento

@{
    ViewData["Title"] = "Delete";
}

<h2>Excluir Equipamento</h2>

<div class="card">
    <div class="card-body">
        <h4>Certeza de que quer Excluir esse Equipamento?</h4>
        <div>
    
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.NumeroSerie)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.NumeroSerie)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Acessorios)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Acessorios)
                </dd>
                <dt class = "col-sm-2">
                    @*@Html.DisplayNameFor(model => model.MarcaEquipamento)*@
                    <label>Marca</label>
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.MarcaEquipamento.NomeMarca)
                </dd>
            </dl>
            <br />
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdEquipamento" />
                <input type="submit" value="Excluir" class="btn btn-danger" /> |
                <a asp-action="Index">Retornar para a lista</a>
            </form>
        </div>
    </div>
</div>
