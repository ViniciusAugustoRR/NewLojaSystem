@model LojaSystem.Models.Equipamento

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-body">

        <h2>Detalhes Equipamento</h2>
        <hr />

        <div>
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.NumeroSerie)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.NumeroSerie)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Acessorios)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Acessorios)
                </dd>
                <dt class = "col-sm-2">
                    <label>Marca</label>
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.MarcaEquipamento.NomeMarca)
                </dd>
            </dl>
        </div>

    </div>
</div>

<br/>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdEquipamento">Editar</a> |
    <a asp-action="Index">Retornar para a lista</a>
</div>
