@model LojaSystem.Models.Equipamento

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-body">
        <h2>Registrar Novo Equipamento</h2>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NumeroSerie" class="control-label"></label>
                        <input asp-for="NumeroSerie" class="form-control" />
                        <span asp-validation-for="NumeroSerie" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Acessorios" class="control-label"></label>
                        <input asp-for="Acessorios" class="form-control" />
                        <span asp-validation-for="Acessorios" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MarcaFK" class="control-label"><label>Marca</label></label>
                        <select asp-for="MarcaFK" class ="form-control" asp-items="ViewBag.MarcaFK"></select>
                    </div>
                    <br />
                    <hr />
                    <div class="form-group">
                        <input type="submit" value="Registrar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
