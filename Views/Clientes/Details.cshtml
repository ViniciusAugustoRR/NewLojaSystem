@model LojaSystem.Models.Cliente

@{
    ViewData["Title"] = "Details";
}


<div class="card">
    <div class="card-body">
        <h2>Detalhes do Cliente</h2>
        <hr />

        <div>
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Apelido)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Apelido)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Endereco)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Endereco)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
        </div>

    </div>
</div>

<br/>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdCliente">Edit</a> |
    <a asp-action="Index">Retornar para a Lista</a>
</div>
