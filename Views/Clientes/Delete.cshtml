@model LojaSystem.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h2>Excluir Cliente</h2>
<div class="card">
    <div class="card-body">
        <h4>Certeza de que quer Excluir esse Cliente?</h4>
        <div>

            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Apelido)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Apelido)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Endereco)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Endereco)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
            
            <br />
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdCliente" />
                <input type="submit" value="Excluir" class="btn btn-danger" /> |
                <a asp-action="Index">Retornar para a Lista</a>
            </form>
        </div>
    </div>
</div>
