@model LojaSystem.Models.NivelResponsavel

@{
    ViewData["Title"] = "Delete";
}
<h2>Deletar Nível</h2>

<div class="card">
    <div class="card-body">
        <h4>Certeza de que quer Deletar esse Nível?</h4>
        <hr />

        <div>
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Nivel)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Nivel)
                </dd>
            </dl>
    
            <br />
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdNivel" />
                <input type="submit" value="Deletar" class="btn btn-danger" /> |
                <a asp-action="Index">Retornar para a Lista</a>
            </form>
        </div>
    </div>
</div>
