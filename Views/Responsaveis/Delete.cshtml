@model LojaSystem.Models.Responsavel

@{
    ViewData["Title"] = "Delete";
}

<h2>Deletar Responsável</h2>

<div class="card">
    <div class="card-body">
        <h4>Certeza de que quer Deletar esse Responsável?</h4>
        <div>

            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.NivelResponsavel)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.NivelResponsavel.Nivel)
                </dd>
            </dl>
    
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdResponsavel" />
                <input type="submit" value="Deletar" class="btn btn-danger" /> |
                <a asp-action="Index">Retornar para a Lista</a>
            </form>
        </div>
    </div>
</div>
