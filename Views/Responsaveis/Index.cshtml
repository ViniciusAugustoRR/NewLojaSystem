@model IEnumerable<LojaSystem.Models.Responsavel>

@{
    ViewData["Title"] = "Index";
}


<div class="card">
    <div class="card-body">

        <h2>Responsáveis Registrados</h2>
        <input class="btn btn-primary" type="button" 
                value="Registrar Novo Responsável" 
                onclick="location.href='@Url.Action("Create", "Responsaveis")'" />

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NivelResponsavel)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NivelResponsavel.Nivel)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdResponsavel">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.IdResponsavel">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdResponsavel">Deletar</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>

    </div>
</div>
