@model LojaSystem.Models.Servico

@{
    ViewData["Title"] = "Delete";
}

<h2>Deletar Serviço</h2>

<div class="card">
    <div class="card-body">

        <h4>Certeza de que quer Deletar esse Serviço?</h4>
        <hr />            

        <div>
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.DataInicio)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.DataInicio)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.DataFinal)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.DataFinal)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ClienteServico)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ClienteServico.IdCliente)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.EquipamentoServico)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.EquipamentoServico.IdEquipamento)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ResponsavelServico)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ResponsavelServico.IdResponsavel)
                </dd>
            </dl>
    
            <br />
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdServico" />
                <input type="submit" value="Deletar" class="btn btn-danger" /> |
                <a asp-action="Index">Retornar para a Lista</a>
            </form>
        </div>

    </div>
</div>
