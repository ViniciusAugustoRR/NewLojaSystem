@model LojaSystem.Models.Servico

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-body">

        <h2>Detalhes do Serviço</h2>

        <div>
            <h4>Servico</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.DataInicio)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.DataInicio)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.DataFinal)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.DataFinal)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ClienteServico)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ClienteServico.IdCliente)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.EquipamentoServico)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.EquipamentoServico.IdEquipamento)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ResponsavelServico)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ResponsavelServico.IdResponsavel)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdServico">Editar</a> |
    <a asp-action="Index">Retornar para a Lista</a>
</div>
