@*ALTER PROCEDURE LS_LOGIN_VERIFY
@USER VARCHAR(50),
@PASSWORD VARCHAR(50)
AS
BEGIN
	
	IF(SELECT COUNT(*) 
	    FROM Responsaveis 
	    WHERE
	    Responsaveis.Login = @USER
		AND Responsaveis.Senha = (SELECT HashBytes('MD5', CONVERT(VARBINARY(MAX), CONVERT(VARCHAR, @PASSWORD))))) < 1 
    BEGIN
		
		SELECT 
			IdResponsavel,
			NivelResponsavelId,
			Nome
		FROM Responsaveis
		WHERE Login = @USER

	END

END*@




