<script href="~/js/Requisicoes.js"></script>

<script>

    var user;
    var password;

    function VerifyLogin(){
        user = $('#username').val()
        password = $('#password').val()        
        var url = "Login/VerifyLogin?user=" + user + "&password=" + password
        

        Requisicao('GET', url,
            function(retorno) {
                console.log(retorno)
                GetToken()
            }
        );


    }

    function GetToken() {

        var body = {
            "UserName": user,
            "Password": password
        }
        var url = "seguranca/Login"

        Requisicao('POST', url,
            function(retorno) {
                console.log(retorno)
            },
            JSON.stringify(body)
        );
    }


    async function Requisicao(tipo, url, funcao, dados) {
        await $.ajax({
            type: tipo,
            url: url,
            contentType: "application/json; charset=utf-8",
            dataType: 'json',
            cache: false,
            async: true,
            data: dados,
            success: funcao,
            error: function (xhr, ajaxOptions, thrownError) {
                if (xhr.status == 401) 
                { alert("Session Expired!"); window.location = 
                    "/Account"; }
                else {
                    alert('Content load failed!', "info");
                }
            }
        });
    }

</script>


@*ALTER PROCEDURE LS_LOGIN_VERIFY
@USER VARCHAR(50),
@PASSWORD VARCHAR(50)
AS
BEGIN
	
	IF(SELECT COUNT(*) 
	    FROM Responsaveis 
	    WHERE
	    Responsaveis.Login = @USER
		AND Responsaveis.Senha = (SELECT HashBytes('MD5', CONVERT(VARBINARY(MAX), CONVERT(VARCHAR, @PASSWORD))))) < 1 
    BEGIN
		
		SELECT 
			IdResponsavel,
			NivelResponsavelId,
			Nome
		FROM Responsaveis
		WHERE Login = @USER

	END

END*@




